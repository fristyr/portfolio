{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": "error",
        "block-scoped-var": "error",
        "class-methods-use-this": "error",
        "no-new-func": "error",
        "eqeqeq": ["error" , "smart"],
        "no-empty-function": "error",
        "no-lone-blocks": "error",
        "no-magic-numbers": ["off", {
            "ignoreArrayIndexes": true,
            "enforceConst": true
        }],
        "no-multi-spaces": "error",
        "no-new": "error"
    }
}